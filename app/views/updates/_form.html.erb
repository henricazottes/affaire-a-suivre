<%= form_with model: update do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% update.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :slug %><br>
    <%= form.text_field :slug %>
    <% update.errors.full_messages_for(:slug).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :date %><br>
    <%= form.datetime_field :date %>
    <% update.errors.full_messages_for(:date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :link %><br>
    <%= form.text_field :link %>
    <% update.errors.full_messages_for(:link).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
