<%= form_with model: trial do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% trial.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :slug %><br>
    <%= form.text_field :slug %>
    <% trial.errors.full_messages_for(:slug).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
